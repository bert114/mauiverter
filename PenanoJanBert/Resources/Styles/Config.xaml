<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenanoJanBert.Resources.Styles.Config">

    <Color x:Key="bg-dark">#e4e4e4</Color>
    <Color x:Key="bg">#f2f2f2</Color>
    <Color x:Key="bg-light">#ffffff</Color>

    <Color x:Key="clr-primary">#ff3c22</Color>
    <Color x:Key="clr-secondary">#61a24d</Color>


   

    <!-- ========================= -->
    <!-- OKLCH Converted to HEX     -->
    <!-- (MAUI does NOT support oklch) -->
    <!-- ========================= -->

    <!-- oklch(0.15 0 264) ≈ #262626 -->
    <Color x:Key="text">#262626</Color>

    <!-- oklch(0.7 0 264) ≈ #B3B3B3 -->
    <Color x:Key="text300">#B3B3B3</Color>

    <!-- ========================= -->
    <!-- Spacing (Thickness values) -->
    <!-- ========================= -->

    

    <!-- ========================= -->
    <!-- Shadows  (MAUI equivalent) -->
    <!-- ========================= -->
    <!-- NOTE: CSS inset shadows are NOT supported in MAUI.
         We approximate them using a standard Shadow object. -->

    <Shadow x:Key="shadow-s"
            Brush="#00000030"
            Offset="0,1"
            Radius="3"
            Opacity="0.25" />

    <Shadow x:Key="shadow-m"
            Brush="#00000030"
            Offset="0,2"
            Radius="6"
            Opacity="0.3" />

    <Shadow x:Key="shadow-l"
            Brush="#00000030"
            Offset="0,4"
            Radius="10"
            Opacity="0.35" />



    <!-- Typography Sizes -->
    <x:Double x:Key="font-paragraph">14</x:Double>
    <x:Double x:Key="font-label">11</x:Double>
    <x:Double x:Key="font-header">26</x:Double>

    <Style x:Key="ParagraphStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource font-paragraph}" />
        <Setter Property="TextColor" Value="{StaticResource text}" />
    </Style>

    <Style x:Key="box-label" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource font-label}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Global default label style -->
    <Style TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource font-label}" />
        <Setter Property="TextColor" Value="{StaticResource text}" />
    </Style>

    <!-- Global header style (H1 equivalent) -->


    
    <Style x:Key="HeaderStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{StaticResource font-header}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource text}" />
        <Setter Property="FontFamily" Value="xmas"/>
    </Style>




    <Style x:Key="clr-frame" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource bg}" />
       
    </Style>


    <Style x:Key="text-lbl" TargetType="Label">
        <Setter Property="FontFamily" Value="xmas" />
    </Style>





</ResourceDictionary>